<header class="header">
  <h1>Todos</h1>
</header>

<%= if assigns[:online_users] do %>
  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= for {user_key, %{metas: metas}} <- assigns[:online_users] do %>
        <tr>
          <td><%= user_key %> (<%= length(metas) %>)</td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<table>
  <thead>
    <tr>
      <th>Completed</th>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <%= for todo <- @todos do %>
      <tr>
        <td><%= todo.completed %></td>
        <td><%= todo.title %></td>
        <td>
        <%= link "Edit", to: Routes.live_path(@socket, TodoLive.Edit, todo) %>
        <%= link "Delete", to: "#", phx_click: "delete_todo", phx_value: todo.id %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<span><%= link "New Todo", to: Routes.live_path(@socket, TodoLive.New) %></span>
